{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "build",
    ".netlify"
  ],
  "include": [
    "src"
  ]
}